doctype html
html(style='background-color:#ddd')
  head
    title= seo.title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='keywords', content=seo.keywords)
    meta(name='description', content=seo.description)

    meta(property='og:type', content=seo.og_type)
    meta(property='og:locale', content=seo.og_locale)
    meta(property='og:title', content=seo.title)
    meta(property='og:description', content=seo.description)
    meta(property='og:site_name', content=seo.og_site_name)
    meta(property='og:url', content=canonical_url)

    if seo.og_image
      meta(property='og:image', content=base_url+seo.og_image)

    script(type='text/javascript')
      | var JS_VARS = !{JSON.stringify(JS_VARS)}

    if JS_VARS.ga_account
      script(type='text/javascript').
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', JS_VARS.ga_account, 'auto');
        ga('send', 'pageview');
  body
    div#app
      block content
    script(src='/javascripts/all.js')
